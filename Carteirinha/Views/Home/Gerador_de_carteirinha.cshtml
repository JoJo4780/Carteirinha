<title>Gerenciamento de Carteirinha</title>
<link rel="stylesheet" href="~/css/style.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<!--CDN de fonte-->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;500;700&display=swap" rel="stylesheet">
<div class="principal">
    <h1 class="text-center">Crie sua carteirinha</h1>
    <div class="container">
        <div class="carteirinha">
            <div class="titulo_form">
                <h2>Carteirinha</h2>
            </div>
            <form class="carteirinha_form">
                <div class="box_image">
                    <label for="User_image">
                        <i class="bi bi-arrow-up-circle User_image"></i>
                    </label>
                    <input type="file" class="Image_file" id="User_image" function="adicionar_imagem()" hidden>
                    <p class="mensagem_image">Adicione uma foto</p>
                </div>
                <div class="nome formularios">
                    <div class="forms">
                        <p class="nome_form">Nome:</p><input type="text" class="input_form" autocomplete="off">
                    </div>
                    <div class="forms">
                        <p class="nome_form">Idade:</p><input type="text" class="input_form" autocomplete="off">
                    </div>
                    <div class="forms">
                        <p class="nome_form">Idolo:</p><input type="text" class="input_form" autocomplete="off">
                    </div>
                </div>

            </form>
            <div class="Code">
                <p class="Codigo_ID">Code:######</p>
            </div>
            <div class="footer_container"></div>
        </div>
        <button type="submit" class="botão-confirmar">Confirmar</button>
    </div>
</div>