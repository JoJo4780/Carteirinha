@model Usuario;
@{
    var permitido = ViewBag.ML;
    var usuario_logado = ViewBag.usuario;
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Carteirinha</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!--CDN fonte-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Carteirinha</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Gerador_de_carteirinha">Gerar Carteirinha</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav float-end">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
<div class=" container d-flex justify-content-center">

<form method="get" asp-controller="Home" asp-action="Logar" class="h-75">
        <h1 class="mb-5">Bem vindo a Valhalla</h1>

    <!-- Email input -->
        <div class="form-outline mb-4">
         <label class="form-label" for="form2Example1">Endereço de email</label>
        <input asp-for="Gmail" type="email" id="form2Example1" class="form-control text-start" />
            @if (!string.IsNullOrEmpty(ViewBag.M1))
            {
                <span id="mensagemErro" class="text-danger">@ViewBag.M1</span>
            }
        </div>

    <!-- Password input -->
        <div class="form-outline mb-4">
            <label class="form-label" for="form2Example2">Senha</label>
        <input asp-for="Senha" type="password" id="form2Example2" class="form-control " />
            @if (!string.IsNullOrEmpty(ViewBag.M2))
            {
                <span id="mensagemErro" class="text-danger">@ViewBag.M2</span>
            }
        </div>

    <!-- Submit button -->
    <div class="text-center">
                @if (permitido == "Logado")
                {
                    <button type="button" onclick="alertar()" class="btn btn-primary btn-block mb-4">Logar</button>
                }else{
    <button type="submit" class="btn btn-primary btn-block mb-4">Logar</button>
                }
            </div>
    <!-- Register buttons -->
    <div class="text-center">
        <p>Não sou cadastrado? <a asp-controller="Cadastro" asp-action="Cadastrar">Registrar</a></p>
        </div>
</form>
</div>
    <footer class="border-top footer_container">
        <div class="container text-center">
            &copy; 2023 - Carteirinha
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>